<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_seting_two"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_grey" >

    <include
        android:id="@+id/include_stub_title"
        layout="@layout/stub_title" />

    <LinearLayout
        android:id="@+id/rl2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_90px"
        android:layout_below="@id/include_stub_title"
        android:background="@color/common_f6eee5"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如有某个帮客缺席，请将其做房数设为0"
            android:textColor="@color/common_666666"
            android:textSize="@dimen/dd_dimen_24px" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/rl2"
        android:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/rl"
            android:flipInterval="30"
            android:layout_marginBottom="@dimen/dd_dimen_20px"
            android:persistentDrawingCache="animation" >
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/rl"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_90px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/common_white"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_oc_wenzi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dd_dimen_20px"
                android:text="共有标间0间"
                android:textColor="@color/common_666666"
                android:textSize="@dimen/dd_dimen_24px" />

            <TextView
                android:id="@+id/tv_oc_wenzi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dd_dimen_20px"
                android:text="(已分0间),"
                android:textColor="@color/common_666666"
                android:textSize="@dimen/dd_dimen_24px" />

            <TextView
                android:id="@+id/tv_oc_wenzi3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dd_dimen_20px"
                android:text="套间0间"
                android:textColor="@color/common_666666"
                android:textSize="@dimen/dd_dimen_24px" />

            <TextView
                android:id="@+id/tv_oc_wenzi4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(已分0间)"
                android:textColor="@color/common_666666"
                android:textSize="@dimen/dd_dimen_24px" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>