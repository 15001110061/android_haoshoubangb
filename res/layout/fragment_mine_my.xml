<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_grey" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/common_222231"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/ll_title_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|left"
            android:minWidth="@dimen/dd_dimen_40px"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/dd_dimen_20px"
                android:text="选择城市"
                android:textColor="@color/common_white"
                android:textSize="@dimen/dd_dimen_32px" />

            <ImageView
                android:id="@+id/iv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingBottom="@dimen/dd_dimen_20px"
                android:paddingRight="@dimen/dd_dimen_20px"
                android:paddingTop="@dimen/dd_dimen_20px"
                android:src="@drawable/stub_back" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_title_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|right"
            android:minWidth="@dimen/dd_dimen_40px"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/iv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="@dimen/dd_dimen_20px"
                android:src="@drawable/icon_shuaxin" />

            <TextView
                android:id="@+id/tv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dd_dimen_20px"
                android:text="New Text"
                android:textColor="@color/common_white"
                android:textSize="@dimen/dd_dimen_32px"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_26px"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="好手帮"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_32px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title" >

        <LinearLayout
            android:id="@+id/ll_dynamic"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_250px"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:background="@color/common_white"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_my_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <ImageView
                    android:id="@+id/iv_my_pic"
                    android:layout_width="@dimen/dd_dimen_175px"
                    android:layout_height="@dimen/dd_dimen_175px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_45px"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_touxiangmoren" />

                <TextView
                    android:id="@+id/tv_my_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_45px"
                    android:layout_toRightOf="@id/iv_my_pic"
                    android:text="0积分"
                    android:textColor="@color/common_text" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_my_jifen"
                    android:layout_alignLeft="@+id/tv_my_jifen"
                    android:layout_marginBottom="@dimen/dd_dimen_38px"
                    android:layout_marginTop="@dimen/dd_dimen_20px"
                    android:background="@color/common_white"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_my_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小名"
                        android:textColor="@color/common_text" />

                    <TextView
                        android:id="@+id/tv_me_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dd_dimen_45px"
                        android:background="@drawable/shape_int_queren_xinyong"
                        android:paddingBottom="@dimen/dd_dimen_2px"
                        android:paddingLeft="@dimen/dd_dimen_5px"
                        android:paddingRight="@dimen/dd_dimen_5px"
                        android:paddingTop="@dimen/dd_dimen_2px"
                        android:text="职务"
                        android:textColor="@color/common_yellow"
                        android:textSize="@dimen/dd_dimen_24px" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_my_describe"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_my_jifen"
                    android:layout_below="@+id/tv_my_jifen"
                    android:layout_marginRight="@dimen/dd_dimen_45px"
                    android:layout_marginTop="@dimen/dd_dimen_38px"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="酒店名称"
                    android:textColor="@color/common_text" />
                
                
                
                       <TextView
                    android:id="@+id/tv_my_describe2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_my_jifen"
                    android:layout_below="@+id/tv_my_jifen"
                    android:layout_marginRight="@dimen/dd_dimen_45px"
                    android:layout_marginTop="@dimen/dd_dimen_38px"
                    android:ellipsize="marquee"
                                  
                    android:visibility="gone"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="请绑定企业信息"
                    android:textColor="@color/common_red" />

                <RelativeLayout
                    android:id="@+id/rl_my_workcard"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/dd_dimen_45px"
                    android:layout_marginTop="@dimen/dd_dimen_25px"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/iv_my_workcard"
                        android:layout_width="@dimen/dd_dimen_80px"
                        android:layout_height="@dimen/dd_dimen_80px"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_gzp" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/iv_my_workcard"
                        android:layout_marginTop="@dimen/dd_dimen_10px"
                        android:text="查看工牌"
                        android:textColor="@color/common_text" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_my_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/iv_my_pic2"
                    android:layout_width="@dimen/dd_dimen_175px"
                    android:layout_height="@dimen/dd_dimen_175px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_45px"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_touxiangmoren" />

                <TextView
                    android:id="@+id/tv_my_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_toRightOf="@+id/iv_my_pic2"
                    android:text="点击登录"
                    android:textColor="@color/common_text"
                    android:textSize="@dimen/dd_dimen_48px" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_1px"
                android:background="@color/common_CCCCCC"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_dynamic"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:background="@color/common_white"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_96px"
                android:layout_marginRight="@dimen/dd_dimen_32px"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/iv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_shouru" />

                <TextView
                    android:id="@+id/iv_my_income"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_20px"
                    android:layout_toRightOf="@id/iv_4"
                    android:gravity="center_vertical"
                    android:text="充值"
                    android:textColor="@color/common_text" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons_arrow" />

                <TextView
                    android:id="@+id/iv_my_chongzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="@dimen/dd_dimen_20px"
                    android:layout_toLeftOf="@+id/imageView1"
                    android:gravity="center_vertical"
                    android:text="￥0"
                    android:textColor="@color/common_text" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_1px"
                android:background="@color/common_CCCCCC" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_96px"
                android:layout_marginRight="@dimen/dd_dimen_32px" >

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_shoucanga" />

                <TextView
                    android:id="@+id/iv_my_collection"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_20px"
                    android:layout_toRightOf="@id/iv_2"
                    android:gravity="center_vertical"
                    android:text="我的收藏"
                    android:textColor="@color/common_text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_1px"
                android:background="@color/common_CCCCCC" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_96px"
                android:layout_marginRight="@dimen/dd_dimen_32px" >

                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_xiaoxi" />

                <TextView
                    android:id="@+id/iv_my_news"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_20px"
                    android:layout_toRightOf="@id/iv_3"
                    android:gravity="center_vertical"
                    android:text="消息中心"
                    android:textColor="@color/common_text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_1px"
                android:background="@color/common_CCCCCC" />

            <RelativeLayout
                android:id="@+id/rl_my_setting"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_96px"
                android:layout_marginRight="@dimen/dd_dimen_32px"
                android:background="@color/common_white" >

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_tuijian" />

                <TextView
                    android:id="@+id/iv_my_recommend"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_20px"
                    android:layout_toRightOf="@id/setting"
                    android:gravity="center_vertical"
                    android:text="推荐给好友"
                    android:textColor="@color/common_text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons_arrow" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/three"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/two"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:background="@color/common_white"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_96px"
                android:layout_marginRight="@dimen/dd_dimen_32px" >

                <ImageView
                    android:id="@+id/iv_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_fankui" />

                <TextView
                    android:id="@+id/iv_seting_opinion"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_20px"
                    android:layout_toRightOf="@id/iv_6"
                    android:gravity="center_vertical"
                    android:text="意见反馈"
                    android:textColor="@color/common_text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_1px"
                android:background="@color/common_CCCCCC" />

            <RelativeLayout
                android:id="@+id/rl_my_setting2"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_96px"
                android:layout_marginRight="@dimen/dd_dimen_32px"
                android:background="@color/common_white" >

                <ImageView
                    android:id="@+id/setting2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icnon_guanyu" />

                <TextView
                    android:id="@+id/iv_seting_about"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_20px"
                    android:layout_toRightOf="@id/setting2"
                    android:gravity="center_vertical"
                    android:text="关于我们"
                    android:textColor="@color/common_text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons_arrow" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/five"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/three"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:background="@color/common_white"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_my_setting3"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_96px"
                android:layout_marginRight="@dimen/dd_dimen_32px"
                android:background="@color/common_white" >

                <ImageView
                    android:id="@+id/setting3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_shezhi" />

                <TextView
                    android:id="@+id/tv_my_seting"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_20px"
                    android:layout_toRightOf="@id/setting3"
                    android:gravity="center_vertical"
                    android:text="设置"
                    android:textColor="@color/common_text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons_arrow" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>