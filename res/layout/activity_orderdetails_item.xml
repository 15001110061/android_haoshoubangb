<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white" >

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_150px" >

        <ImageView
            android:id="@+id/iv_collection_picture"
            android:layout_width="@dimen/dd_dimen_100px"
            android:layout_height="@dimen/dd_dimen_100px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_26px"
            android:scaleType="fitXY"
            android:src="@drawable/image_moren_pop" />

        <LinearLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dd_dimen_140px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dd_dimen_26px"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_review_jiedan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="0元"
                android:textColor="@color/common_383838"
                android:textSize="@dimen/dd_dimen_30px" />

            <TextView
                android:id="@+id/tv_review_dashang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="打赏"
                android:textColor="@color/common_666666"
                android:textSize="@dimen/dd_dimen_24px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dd_dimen_140px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_toRightOf="@+id/iv_collection_picture"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_review_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="小名"
                android:textColor="@color/common_454545"
                android:textSize="@dimen/dd_dimen_30px" />

            <TextView
                android:id="@+id/tv_review_fangjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="房间"
                android:textColor="@color/common_666666"
                android:textSize="@dimen/dd_dimen_24px" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout2"
        android:background="@color/common_CCCCCC" />

</RelativeLayout>