<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_grey" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_151px"
        android:layout_marginLeft="@dimen/dd_dimen_20px"
        android:layout_marginRight="@dimen/dd_dimen_20px"
        android:layout_marginTop="@dimen/dd_dimen_25px"
        android:background="@drawable/shape_current_item_rl_bg" >

        <ImageView
            android:id="@+id/iv_collection_picture"
            android:layout_width="@dimen/dd_dimen_268px"
            android:layout_height="@dimen/dd_dimen_151px"
            android:layout_centerVertical="true"
            android:padding="@dimen/dd_dimen_10px"
            android:scaleType="fitXY"
            android:src="@drawable/image_moren" />

        <LinearLayout
            android:id="@+id/rl_collection_one"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dd_dimen_38px"
            android:layout_toRightOf="@+id/iv_collection_picture"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_collection_peonumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Name"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_24px" />

            <TextView
                android:id="@+id/tv_collection_peonumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/rl_collection_one"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="管理员:"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_24px" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_current_yanshou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dd_dimen_10px"
            android:background="@drawable/shape_int_queren_xinyong"
            android:ellipsize="end"
            android:paddingBottom="@dimen/dd_dimen_10px"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px"
            android:paddingTop="@dimen/dd_dimen_10px"
            android:singleLine="true"
            android:text="申请加入"
            android:textColor="@color/common_yellow"
            android:textSize="@dimen/dd_dimen_24px" />
        
        
        
        <TextView
            android:id="@+id/tv_current_yanshou2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dd_dimen_10px"
            android:background="@drawable/shape_int_queren_xinyong"
            android:ellipsize="end"
            android:paddingBottom="@dimen/dd_dimen_10px"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px"
            android:paddingTop="@dimen/dd_dimen_10px"
            android:singleLine="true"
            android:text="申请管理员"
            android:textColor="@color/common_yellow"
            android:textSize="@dimen/dd_dimen_24px" />
    </RelativeLayout>

</RelativeLayout>