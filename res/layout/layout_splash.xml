<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#febd00" >

    <TextView
        android:id="@+id/tv_current_peonumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_current_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:text="好手帮"
        android:textColor="@color/common_white"
        android:textSize="@dimen/dd_dimen_46px" />

    <ImageView
        android:id="@+id/tv_current_picture"
        android:layout_width="@dimen/dd_dimen_200px"
        android:layout_height="@dimen/dd_dimen_200px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:src="@drawable/ic_splash" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_splashid" />

        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dd_dimen_30px"
            android:singleLine="true"
            android:text="您的酒店清洁专家"
            android:textColor="@color/common_text"
            android:textSize="@dimen/dd_dimen_36px" />
    </RelativeLayout>

</RelativeLayout>