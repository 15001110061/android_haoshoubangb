<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_signet_two"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_grey" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/common_222231"
        android:gravity="center_vertical" >

        <EditText
            android:id="@+id/et_signed_phones"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_32px"
            android:layout_marginRight="@dimen/dd_dimen_32px"
            android:layout_toLeftOf="@+id/ll_title_right"
            android:layout_toRightOf="@+id/ll_title_left"
            android:background="@drawable/shape_current_item_et_bg"
            android:hint="输入手机号或邮箱"
            android:padding="@dimen/dd_dimen_10px"
            android:singleLine="true"
            android:textColor="@color/common_666666"
            android:textSize="@dimen/dd_dimen_32px" >
        </EditText>

        <LinearLayout
            android:id="@+id/ll_title_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|left"
            android:minWidth="@dimen/dd_dimen_40px"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="@dimen/dd_dimen_20px"
                android:src="@drawable/stub_back" />

            <View
                android:layout_width="@dimen/dd_dimen_3px"
                android:layout_height="@dimen/dd_dimen_40px"
                android:background="#3b3b4e" />

            <TextView
                android:id="@+id/tv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/dd_dimen_20px"
                android:paddingRight="@dimen/dd_dimen_20px"
                android:text="New Text"
                android:textColor="@color/common_white"
                android:textSize="@dimen/dd_dimen_32px"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_title_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|right"
            android:minWidth="@dimen/dd_dimen_40px"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="@dimen/dd_dimen_20px"
                android:src="@drawable/stub_back"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dd_dimen_20px"
                android:text="搜索"
                android:textColor="@color/common_white"
                android:textSize="@dimen/dd_dimen_32px" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/me_add_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title" >

        <LinearLayout
            android:id="@+id/ll_dynamic"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_168px"
            android:background="@color/common_white"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <ImageView
                    android:id="@+id/iv_my_pic"
                    android:layout_width="@dimen/dd_dimen_120px"
                    android:layout_height="@dimen/dd_dimen_120px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_45px"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_moren_pop" />

                <RelativeLayout
                    android:id="@+id/rl_my_workcard"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/dd_dimen_45px"
                    android:layout_marginTop="@dimen/dd_dimen_25px"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/iv_my_workcard"
                        android:layout_width="@dimen/dd_dimen_80px"
                        android:layout_height="@dimen/dd_dimen_80px"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_gzp" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/iv_my_workcard"
                        android:layout_marginTop="@dimen/dd_dimen_10px"
                        android:text="查看工牌"
                        android:textColor="@color/common_666666" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_my_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_my_name"
                    android:layout_alignBottom="@+id/tv_my_name"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_toRightOf="@+id/tv_my_name"
                    android:background="@drawable/shape_int_queren_xinyong"
                    android:paddingBottom="@dimen/dd_dimen_2px"
                    android:paddingLeft="@dimen/dd_dimen_5px"
                    android:paddingRight="@dimen/dd_dimen_5px"
                    android:paddingTop="@dimen/dd_dimen_2px"
                    android:text="酒店名称"
                    android:textColor="@color/common_yellow" />

                <TextView
                    android:id="@+id/tv_my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_my_pic"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_marginTop="@dimen/dd_dimen_10px"
                    android:layout_toRightOf="@+id/iv_my_pic"
                    android:text="小名"
                    android:textColor="@color/common_666666" />

                <TextView
                    android:id="@+id/tv_my_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_my_name"
                    android:layout_below="@+id/tv_my_name"
                    android:layout_marginTop="@dimen/dd_dimen_20px"
                    android:text="Tel"
                    android:textColor="@color/common_666666" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_1px"       android:layout_marginLeft="@dimen/dd_dimen_32px"
                android:layout_marginRight="@dimen/dd_dimen_32px" 
                android:background="@color/common_CCCCCC"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_dynamic"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:background="@color/common_white"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_mech_one"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_96px"
               android:layout_marginLeft="@dimen/dd_dimen_32px"
                android:layout_marginRight="@dimen/dd_dimen_32px"  >

                <TextView
                    android:id="@+id/iv_my_income"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:hint="选择部门"
                    android:textColor="@color/common_666666" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons_arrow" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/three"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/two"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:background="@color/common_white"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_96px"
             android:layout_marginLeft="@dimen/dd_dimen_32px"
                android:layout_marginRight="@dimen/dd_dimen_32px" >

                <TextView
                    android:id="@+id/iv_seting_opinion"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="仅查看"
                    android:textColor="@color/common_666666" />

                <CheckBox
                    android:id="@+id/cb_seting_shoushi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/switch_selecor"
                    android:button="@null"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_1px"       android:layout_marginLeft="@dimen/dd_dimen_32px"
                android:layout_marginRight="@dimen/dd_dimen_32px" 
                android:background="@color/common_CCCCCC" />

            <RelativeLayout
                android:id="@+id/rl_my_setting"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_96px"
                android:layout_marginLeft="@dimen/dd_dimen_32px"
                android:layout_marginRight="@dimen/dd_dimen_32px" 
                android:background="@color/common_white" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="验收"
                    android:textColor="@color/common_666666" />

                <CheckBox
                    android:id="@+id/cb_seting_shoushi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/switch_selecor"
                    android:button="@null"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_1px"       android:layout_marginLeft="@dimen/dd_dimen_32px"
                android:layout_marginRight="@dimen/dd_dimen_32px" 
                android:background="@color/common_CCCCCC" />

            <RelativeLayout
                android:id="@+id/rl_my_setting"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_96px"
                 android:layout_marginLeft="@dimen/dd_dimen_32px"
                android:layout_marginRight="@dimen/dd_dimen_32px" 
                android:background="@color/common_white" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="发布订单"
                    android:textColor="@color/common_666666" />

                <CheckBox
                    android:id="@+id/cb_seting_shoushi3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/switch_selecor"
                    android:button="@null"
                    android:gravity="center_vertical" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_mech_shanchu"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_100px"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/three"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dd_dimen_60px"
            android:layout_marginRight="@dimen/dd_dimen_60px"
            android:layout_marginTop="@dimen/dd_dimen_37px"
            android:background="@drawable/shape_home_item_tv_sign_bg"
            android:gravity="center"
            android:text="确认添加"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_36px" />
    </RelativeLayout>

</RelativeLayout>