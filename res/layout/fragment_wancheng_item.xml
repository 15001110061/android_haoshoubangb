<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_grey" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_290px"
        android:layout_marginLeft="@dimen/dd_dimen_20px"
        android:layout_marginRight="@dimen/dd_dimen_20px"
        android:layout_marginTop="@dimen/dd_dimen_25px"
        android:background="@drawable/shape_current_item_rl_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_70px"
            android:layout_marginLeft="@dimen/dd_dimen_32px"
            android:layout_marginRight="@dimen/dd_dimen_32px" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_1px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/devide_line" />

            <TextView
                android:id="@+id/tv_current_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_current_state "
                android:layout_alignBottom="@+id/tv_current_state "
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/tv_current_state "
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:text="姓名"
                android:textColor="@color/common_666666"
                android:textSize="@dimen/dd_dimen_24px" />

            <TextView
                android:id="@+id/tv_current_state "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="订单状态"
                android:textColor="@color/common_666666"
                android:textSize="@dimen/dd_dimen_24px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_32px"
            android:layout_marginRight="@dimen/dd_dimen_32px" >

            <ImageView
                android:id="@+id/tv_current_picture"
                android:layout_width="@dimen/dd_dimen_176px"
                android:layout_height="@dimen/dd_dimen_176px"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/image_moren" />

            <ImageView
                android:id="@+id/iv_current_tel"
                android:layout_width="@dimen/dd_dimen_80px"
                android:layout_height="@dimen/dd_dimen_80px"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_dianhua"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_current_text"
                android:layout_width="@dimen/dd_dimen_80px"
                android:layout_height="@dimen/dd_dimen_80px"
                android:layout_alignTop="@+id/iv_current_tel"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@+id/iv_current_tel"
                android:scaleType="fitXY"
                android:src="@drawable/icon_liuyan"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_220px"
                android:layout_marginLeft="@dimen/dd_dimen_22px"
                android:layout_marginRight="@dimen/dd_dimen_22px"
                android:layout_toRightOf="@+id/tv_current_picture"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_current_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end" android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="清洁房间:0间"
                    android:textColor="@color/common_666666"
                    android:textSize="@dimen/dd_dimen_24px" />

                <TextView
                    android:id="@+id/tv_current_peonumber2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:gravity="center_vertical"
                    android:text="帮客人数:0人"
                    android:textColor="@color/common_666666"
                    android:textSize="@dimen/dd_dimen_24px" />

                <TextView
                    android:id="@+id/tv_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="开始时间:"
                    android:textColor="@color/common_666666"
                    android:textSize="@dimen/dd_dimen_24px" />

                <TextView
                    android:id="@+id/tv_current_feiyong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="工作费用:"
                    android:textColor="@color/common_666666"
                    android:textSize="@dimen/dd_dimen_24px" />

                <TextView
                    android:id="@+id/tv_current_quxiao"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="取消理由:"
                    android:textColor="@color/common_666666"
                    android:textSize="@dimen/dd_dimen_24px" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>