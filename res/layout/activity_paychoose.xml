<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_grey" >

    <include
        android:id="@+id/include_stub_title"
        layout="@layout/stub_title" />

    <TextView
        android:id="@+id/tv_paycash_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_stub_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dd_dimen_62px"
        android:gravity="center"
        android:text="本次交易"
        android:textColor="@color/common_666666"
        android:textSize="@dimen/dd_dimen_24px" />

    <TextView
        android:id="@+id/tv_paycash_titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_paycash_img"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dd_dimen_70px"
        android:layout_marginTop="@dimen/dd_dimen_25px"
        android:gravity="center"
        android:text="￥0"
        android:textColor="@color/common_text"
        android:textSize="@dimen/dd_dimen_48px" />

    <LinearLayout
        android:id="@+id/two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_paycash_titles"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_10px"
            android:visibility="gone"
            android:background="@color/common_CCCCCC" />

        <RelativeLayout
            android:id="@+id/rl_paychoose_1"
            android:layout_width="fill_parent"     android:visibility="gone"
            android:layout_height="@dimen/dd_dimen_96px"
            android:background="@color/common_white"
        >

            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_xianjins" />

            <TextView
                android:id="@+id/iv_re_title_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_20px"
                android:layout_toRightOf="@id/iv_1"
                android:gravity="center_vertical"
                android:text="使用现金支付"
                android:textColor="@color/common_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dd_dimen_32px"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/icons_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_10px"     android:visibility="gone"
            android:background="@color/common_CCCCCC" />

        <RelativeLayout
            android:id="@+id/rl_paychoose_2"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_96px"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:background="@color/common_white" >

            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_zhifubao" />

            <TextView
                android:id="@+id/iv_re_title_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_20px"
                android:layout_toRightOf="@id/iv_2"
                android:gravity="center_vertical"
                android:text="使用支付宝支付"
                android:textColor="@color/common_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dd_dimen_32px"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/icons_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_10px"  android:visibility="gone" 
            android:background="@color/common_CCCCCC" />

        <RelativeLayout
            android:id="@+id/rl_paychoose_3"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_96px"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:background="@color/common_white" >

            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icom_zhuanzhang" />

            <TextView
                android:id="@+id/iv_re_title_3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_20px"
                android:layout_toRightOf="@id/iv_3"
                android:gravity="center_vertical"
                android:text="向好手帮转账"
                android:textColor="@color/common_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dd_dimen_32px"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/icons_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_10px"    android:visibility="gone"
            android:background="@color/common_CCCCCC" />

        <RelativeLayout
            android:id="@+id/rl_paychoose_4"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_96px"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:background="@color/common_white"     android:visibility="gone"
          >

            <ImageView
                android:id="@+id/iv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_qianyue" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_20px"
                android:layout_toRightOf="@id/iv_5"
                android:gravity="center_vertical"
                android:text="我是与好手帮签约的企业"
                android:textColor="@color/common_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dd_dimen_32px"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/icons_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"  android:visibility="gone" 
            android:layout_height="@dimen/dd_dimen_10px"
            android:background="@color/common_CCCCCC" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone" >
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dd_dimen_60px"
        android:layout_marginRight="@dimen/dd_dimen_60px"
        android:layout_marginTop="@dimen/dd_dimen_59px"
        android:gravity="center"
        android:text="如您需要现金支付，请联系客服"
        android:textColor="@color/common_CCCCCC"
        android:textSize="@dimen/dd_dimen_30px" />

</RelativeLayout>