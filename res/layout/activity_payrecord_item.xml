<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_grey" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_205px"
        android:layout_marginLeft="@dimen/dd_dimen_20px"
        android:layout_marginRight="@dimen/dd_dimen_20px"
        android:layout_marginTop="@dimen/dd_dimen_25px"
        android:background="@drawable/shape_current_item_rl_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_66px"
            android:layout_marginLeft="@dimen/dd_dimen_25px"
            android:layout_marginRight="@dimen/dd_dimen_25px" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_1px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/devide_line" />

            <ImageView
                android:id="@+id/tv_current_picture"
                android:layout_width="@dimen/dd_dimen_40px"
                android:layout_height="@dimen/dd_dimen_40px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_duihao" />

            <TextView
                android:id="@+id/tv_current_state "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="通过XX支付"
                android:textColor="@color/common_666666"
                android:textSize="@dimen/dd_dimen_24px" />

            <TextView
                android:id="@+id/tv_current_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_current_state "
                android:layout_alignBottom="@+id/tv_current_state "
                android:layout_marginLeft="@dimen/dd_dimen_15px"
                android:layout_toRightOf="@+id/tv_current_picture"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:text="支付成功"
                android:textColor="@color/common_666666"
                android:textSize="@dimen/dd_dimen_30px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_25px"
            android:layout_marginRight="@dimen/dd_dimen_25px" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dd_dimen_220px"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/tv_current_room2"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_current_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"        android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="To:"
                    android:textColor="@color/common_666666"
                    android:textSize="@dimen/dd_dimen_30px" />

                <TextView
                    android:id="@+id/tv_current_peonumber2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="2015-1-1"
                    android:textColor="@color/common_666666"
                    android:textSize="@dimen/dd_dimen_24px" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_current_room2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="￥0"
                android:textColor="@color/common_yellow"
                android:textSize="@dimen/dd_dimen_60px" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>