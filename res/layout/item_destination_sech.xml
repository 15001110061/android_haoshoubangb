<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_black_naozhong_his" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_15px"
            android:layout_toRightOf="@id/iv_icon"
            android:orientation="vertical"
            android:paddingLeft="11dp" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:focusable="false"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="tv_title"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_25px" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:focusable="false"
                android:gravity="center_vertical"
                android:text="tv_address"
                android:textColor="@color/common_message"
                android:textSize="@dimen/dd_dimen_20px"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/iv_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dd_dimen_15px"
        android:background="@color/devide_line" />

    <TextView
        android:id="@+id/tv_signed_next"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_80px"
        android:layout_below="@+id/relativeLayout1"
        android:background="@color/common_yellow"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/common_white"
        android:textSize="@dimen/dd_dimen_32px"
        android:visibility="gone" />

</LinearLayout>